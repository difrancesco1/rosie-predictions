{
  "name": "electron-nextjs-spring",
  "version": "1.0.0",
  "description": "Electron app with Next.js frontend and Spring Boot backend",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"cd frontend && npm run dev\" \"cd backend && mvn spring-boot:run\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "cd frontend && npm run build && cd ../backend && mvn package && cd .. && electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.yourcompany.app",
    "productName": "ElectronNextSpring",
    "files": [
      "electron/**/*",
      "frontend/out/**/*"
    ],
    "extraResources": [
      {
        "from": "backend/target/backend-0.0.1-SNAPSHOT.jar",
        "to": "app/backend.jar"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.0",
    "wait-on": "^7.2.0"
  }
}